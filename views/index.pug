extends layout

block content
  // Un contenedor que engloba al chat
  #chat
    h1= message
    br
    // Un contenedor para los mensajes
    #messages
    // Un contenedor para el formulario
    #form
      // El formulario
      form(action='', onsubmit='return false;', method='POST')
        //Un span para los mensajes del usuario y la API. Solo queremos enseñar esto si tenemos un mensaje
        //span#user-message
        // El input para el mensaje
        input#msg(autocomplete='off')
        // El boton para enviar el mensaje
        button#btnEnviar Enviar
        // Añadimos un contenedor para mensajes de la API
        #api-messages
        //Un input desactivado para mostrar los mensajes de esta API
        input#api-message(disabled, value='')
    
    script#script(src="/javascripts/cliente.js")
